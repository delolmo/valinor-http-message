<?xml version="1.0"?>
<ruleset>
    <!-- display progress -->
    <arg value="p"/>
    <arg name="report" value="full"/>

    <!-- coding standard -->
    <rule ref="Doctrine" />

    <!-- Paths to check -->
    <file>src</file>
    <file>tests</file>
    
    <rule ref="Generic.Files.LineEndings">
        <properties>
            <property name="eolChar" value="\n"/>
        </properties>
    </rule>
</ruleset>
